{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "us-central1-docker.pkg.dev/de2024-435420/labrepo/inventoryservice-api:0.0.1",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": ["push", "us-central1-docker.pkg.dev/de2024-435420/labrepo/inventoryservice-api:0.0.1"]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run", "deploy", "inventory-service",
        "--image", "us-central1-docker.pkg.dev/de2024-435420/labrepo/inventoryservice-api:0.0.1",
        "--region", "us-central1",
        "--platform", "managed",
        "--allow-unauthenticated",
        "--update-env-vars", "ORDER_EVENTS_TOPIC=order-events,INVENTORY_SUBSCRIPTION=inventory-order-events-sub,INVENTORY_EVENTS_TOPIC=inventory-events,PROJECT_ID=de2024-435420,DB_URL=bigquery://de2024-435420/group2_inventorydb"
      ]
    }
  ]
}